                      </tbody>
                    </table>
                    <nav aria-label="navigation">
                        <ul class="pagination">
                          @{
                            
                            int totalPages = Model.PaginatedWishlist.Count/Model.PaginatedWishlist.PageSize;
                            int remainder = Model.PaginatedWishlist.Count%Model.PaginatedWishlist.PageSize;
                            int extraItems = remainder == 0 ? 0: 1;
                            totalPages = totalPages + extraItems;
                            string disableFirst = Model.PaginatedWishlist.PageIndex == 1 ?"disabled":"";
                            string disableLast = Model.PaginatedWishlist.PageIndex == totalPages ?"disabled":"";
                            <li class="page-item @disableFirst">
                              <a class="page-link page-link-prev" asp-action="Index" asp-controller="Wishlist" 
                                asp-route-PageIndex="@(Model.PaginatedWishlist.PageIndex - 1)" aria-label="Previous" tabindex="-1" aria-disabled="true">
                                  Prev
                              </a>
                          </li>
                            for(int i = 1;i <= totalPages; i++){
                              string active = i == Model.PaginatedWishlist.PageIndex?"active":"";
                              <li class="page-item @active" aria-current="page">
                                <a class="page-link" asp-action="Index" asp-controller="Wishlist"
                                asp-route-PageIndex="@i">@i</a></li>
                            }
                            <li class="page-item @disableLast">
                              <a class="page-link page-link-next" asp-action="Index" asp-controller="Wishlist" 
                                asp-route-PageIndex="@(Model.PaginatedWishlist.PageIndex + 1)" aria-label="Next">
                                  Next
                              </a>
                          </li>
                          }


